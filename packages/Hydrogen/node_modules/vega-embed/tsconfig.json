{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "importHelpers": true,
    "lib": ["es6", "dom"]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "node_modules/vega-lite/typings/*.d.ts",
    "typings/*.d.ts"
  ]
}
